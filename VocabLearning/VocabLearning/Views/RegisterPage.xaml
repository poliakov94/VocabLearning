<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="VocabLearning.Views.RegisterPage"
			 Title="RegisterPage">
	<StackLayout Spacing="20" Padding="20"
				 VerticalOptions="Center">
		<Entry Placeholder="First Name"
			   Text="{Binding Email}"
			   Keyboard="Text"/>
		<Entry Placeholder="Surname"
			   Text="{Binding Surname}"
			   Keyboard="Text"/>
		<Entry Placeholder="E-mail"
			   Text="{Binding Email}"
			   Keyboard="Email"/>
		<Entry Placeholder="Password"
			   Text="{Binding Password}"
			   IsPassword="True"/>
		<Entry Placeholder="Re-enter Password"
			   Text="{Binding Password}"
			   IsPassword="True"/>
		<StackLayout Orientation="Horizontal">
			<Label Text="Are you a teacher?"/>
			<Switch IsToggled="{Binding IsTeacher}"/>
		</StackLayout>		
		<Button Text="Register" TextColor="White"
				BackgroundColor="#77D065"
				Command="{Binding NavigateCommand}" 
				CommandParameter="LoginPage"/>
	</StackLayout>
</ContentPage>