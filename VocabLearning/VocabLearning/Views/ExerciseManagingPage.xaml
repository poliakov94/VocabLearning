<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="VocabLearning.Views.ExerciseManagingPage"
			 Title="ExerciseManaginPage">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Save"
					 Command="{Binding SaveExerciseCommand}"/>
	</ContentPage.ToolbarItems>
	<StackLayout>
		<Entry Text="{Binding Name}" Keyboard="Text"/>
		<Label Text="{Binding Group}"/>
		<Label Text="Start date"/>
		<DatePicker VerticalOptions="CenterAndExpand"
					Format="dd-MM-yyyy" 
					Date="{Binding ValidFrom}"/>
		<TimePicker VerticalOptions="CenterAndExpand"
					Time="{Binding ValidFrom}"/>
		<Label Text="Due date"/>
		<DatePicker VerticalOptions="CenterAndExpand" 
					Format="dd-MM-yyyy" 
					Date="{Binding ValidUntil}"/>
		<TimePicker VerticalOptions="CenterAndExpand" 
					Time="{Binding ValidFrom}"/>
		<ListView x:Name="ExerciseList"				  
				  VerticalOptions="FillAndExpand"
				  HasUnevenRows="True"
				  IsPullToRefreshEnabled="True"
				  ItemsSource="{Binding Tasks}"
				  SelectedItem="{Binding TaskSelected, Mode=TwoWay}">
			<ListView.Header>
				<StackLayout>
					<Label Text="Pick a task to manage it."
					   VerticalOptions="Center"
					   HorizontalTextAlignment="Center"/>
					<Button Text="Add task"
						VerticalOptions="Center"
						Command="{Binding AddTaskCommand}"/>
				</StackLayout>				
			</ListView.Header>
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout VerticalOptions="FillAndExpand">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>
								<Grid.RowDefinitions>
									<RowDefinition Height="40"/>
									<RowDefinition Height="20"/>
									<RowDefinition Height="20"/>
									<RowDefinition Height="20"/>
								</Grid.RowDefinitions>
								<Label Text="{Binding Word}"/>
								<Label Text="{Binding Definition}"/>
							</Grid>
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
</ContentPage>